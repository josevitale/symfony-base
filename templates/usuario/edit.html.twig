{% extends 'layout.html.twig' %}

{% block contenido %}
    <h1 id="usuario_edit_titulo">{{ 'usuario.edit.titulo'|trans }}</h1>
    {{ form_start(form, {'action': path('usuario_update', { 'id': usuario.id }), 'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            {{ form_label(form.email, 'usuario.type.email'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.username, 'usuario.type.username'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.first, 'usuario.type.plain_password.password'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.second, 'usuario.type.plain_password.confirmacion'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="usuario_edit_aceptar" type="submit" class="btn btn-primary">{{ 'general.submit'|trans }}</button>
                {% if is_granted('ROLE_ADMIN') %}
                    <a id="usuario_edit_cancelar" class="btn btn-primary" href="{{ path('usuario_list') }}" role="button">{{ 'general.cancelar'|trans }}</a>
                {% else %}
                    <a id="usuario_edit_cancelar" class="btn btn-primary" href="{{ path('homepage') }}" role="button">{{ 'general.cancelar'|trans }}</a>
                {% endif %}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
