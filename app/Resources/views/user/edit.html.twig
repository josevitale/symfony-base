{% extends 'layout.html.twig' %}

{% block contenido %}
    <h1 id="user_edit_titulo">{{ 'user.edit.titulo'|trans }}</h1>
    {{ form_start(form, {'action': path('user_update', { 'id': user.id }), 'method': 'PUT', 'attr': {'class': 'form-horizontal'}}) }}
        {% if not form.vars.valid %}
            <div id="form_errors" class="alert alert-danger" role="alert">
                {{ form_errors(form) }}
            </div>
        {% endif %}
        <div class="form-group">
            {{ form_label(form.email, 'user.type.email'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.username, 'user.type.username'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.first, 'user.type.plain_password.password'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.second, 'user.type.plain_password.confirmacion'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="user_edit_aceptar" type="submit" class="btn btn-primary">{{ 'general.submit'|trans }}</button>
                {% if is_granted('ROLE_ADMIN') %}
                    <a id="user_edit_cancelar" class="btn btn-primary" href="{{ path('user_list') }}" role="button">{{ 'general.cancelar'|trans }}</a>
                {% else %}
                    <a id="user_edit_cancelar" class="btn btn-primary" href="{{ path('homepage') }}" role="button">{{ 'general.cancelar'|trans }}</a>
                {% endif %}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
