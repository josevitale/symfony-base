{% extends 'layout.html.twig' %}

{% block contenido %}
    <h1 id="user_new_titulo">{{ 'user.new.titulo'|trans }}</h1>
    {{ form_start(form, {'action': path('user_create'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            {{ form_label(form.email, 'user.type.email'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.username, 'user.type.username'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.first, 'user.type.plain_password.password'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.second, 'user.type.plain_password.confirmacion'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="user_new_aceptar" type="submit" class="btn btn-primary">{{ 'general.submit'|trans }}</button>
                <a id="user_new_cancelar" class="btn btn-primary" href="{{ path('user_list') }}" role="button">{{ 'general.cancelar'|trans }}</a>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
