{% extends 'layout.html.twig' %}

{% block contenido %}
    <h1>{{ 'user.show.titulo'|trans }}</h1>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'user.list.id'|trans }}</th><th>{{ 'user.list.email'|trans }}</th><th>{{ 'user.list.username'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ user.id }}</td><td>{{ user.email }}</td><td>{{ user.username }}</td>
            </tr>
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a class="btn btn-primary" href="{{ path('user_edit', { 'id': user.id }) }}" role="button">{{ 'general.modificar'|trans }}</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-danger" href="{{ path('user_remove', { 'id': user.id }) }}" role="button">{{ 'general.eliminar'|trans }}</a>
                <a class="btn btn-primary" href="{{ path('user_list') }}" role="button">{{ 'general.volver'|trans }}</a>
            {% else %}
                <a class="btn btn-primary" href="{{ path('homepage') }}" role="button">{{ 'general.volver'|trans }}</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
