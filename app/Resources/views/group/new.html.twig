{% extends 'layout.html.twig' %}

{% block contenido %}
    <h1>{{ 'group.new.titulo'|trans }}</h1>
    {{ form_start(form, {'action': path('group_create'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
        {% if not form.vars.valid %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form) }}
            </div>
        {% endif %}
        <div class="form-group">
            {{ form_label(form.name, 'group.type.name'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">{{ 'general.submit'|trans }}</button>
                <a class="btn btn-primary" href="{{ path('group_list') }}" role="button">{{ 'general.cancelar'|trans }}</a>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
