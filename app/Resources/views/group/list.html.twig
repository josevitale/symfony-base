{% extends 'layout.html.twig' %}

{% block contenido %}
    <h1>{{ 'group.list.titulo'|trans }}</h1>
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>{{ 'group.list.id'|trans }}</th><th>{{ 'group.list.name'|trans }}</th><th>{{ 'general.acciones'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.id }}</td><td>{{ group.name }}</td>
                <td>
                    <span>
                       <a class="btn btn-primary btn-sm" href="{{ path('group_show', { 'id': group.id }) }}">{{ 'general.ver'|trans }}</a>
                    </span>
                    <span>
                       <a class="btn btn-primary btn-sm" href="{{ path('group_edit', { 'id': group.id }) }}">{{ 'general.modificar'|trans }}</a>
                    </span>
                    <span>
                       <a class="btn btn-danger btn-sm" href="{{ path('group_remove', { 'id': group.id }) }}">{{ 'general.eliminar'|trans }}</a>
                    </span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a class="btn btn-primary" href="{{ path('group_new') }}" role="button">{{ 'general.agregar'|trans }}</a>
        </div>
    </div>
{% endblock %}
