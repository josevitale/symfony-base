{% extends 'layout.html.twig' %}

{% block contenido %}
    <h1 id="usuario_show_titulo">{{ 'usuario.show.titulo'|trans }}</h1>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'usuario.list.id'|trans }}</th><th>{{ 'usuario.list.email'|trans }}</th><th>{{ 'usuario.list.username'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ usuario.id }}</td><td>{{ usuario.email }}</td><td>{{ usuario.username }}</td>
            </tr>
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a id="usuario_show_edit" class="btn btn-primary" href="{{ path('usuario_edit', { 'id': usuario.id }) }}" role="button">{{ 'general.modificar'|trans }}</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a id="usuario_show_remove" class="btn btn-danger" href="{{ path('usuario_remove', { 'id': usuario.id }) }}" role="button">{{ 'general.eliminar'|trans }}</a>
                <a id="usuario_show_salir" class="btn btn-primary" href="{{ path('usuario_list') }}" role="button">{{ 'general.volver'|trans }}</a>
            {% else %}
                <a id="usuario_show_salir" class="btn btn-primary" href="{{ path('homepage') }}" role="button">{{ 'general.volver'|trans }}</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
