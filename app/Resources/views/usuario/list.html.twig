{% extends 'layout.html.twig' %}

{% block contenido %}
    <h1 id="usuario_list_titulo">{{ 'usuario.list.titulo'|trans }}</h1>
    <table id="usuario_list_table" class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>{{ 'usuario.list.id'|trans }}</th><th>{{ 'usuario.list.email'|trans }}</th><th>{{ 'usuario.list.username'|trans }}</th><th>{{ 'general.acciones'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.id }}</td><td>{{ usuario.email }}</td><td>{{ usuario.username }}</td>
                <td class="table_accion">
                    <span>
                       <a class="btn btn-primary btn-sm table_accion_show" href="{{ path('usuario_show', { 'id': usuario.id }) }}">{{ 'general.ver'|trans }}</a>
                    </span>
                    <span>
                       <a class="btn btn-primary btn-sm table_accion_edit" href="{{ path('usuario_edit', { 'id': usuario.id }) }}">{{ 'general.modificar'|trans }}</a>
                    </span>
                    <span>
                       <a class="btn btn-danger btn-sm table_accion_remove" href="{{ path('usuario_remove', { 'id': usuario.id }) }}">{{ 'general.eliminar'|trans }}</a>
                    </span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a id="usuario_list_new" class="btn btn-primary" href="{{ path('usuario_new') }}" role="button">{{ 'general.agregar'|trans }}</a>
        </div>
    </div>
{% endblock %}
